#include <stdio.h>
#include <stdlib.h>

// Função recursiva para calcular a soma dos dígitos de um número
int somaDosDigitos(int n) {
    if (n == 0)
        return 0;
    else
        return (n % 10) + somaDosDigitos(n / 10);
}

int main(void) {
    int numero = 12345;
    int resultado = somaDosDigitos(numero);
    printf("A soma dos dígitos de %d é %d\n", numero, resultado);
    return 0;
}

#include <stdio.h>
#include <stdlib.h>

// Função recursiva para calcular a soma dos dígitos de um número
int somaDosDigitos(int n) {
    if (n == 0)
        return 0;
    else
        return (n % 10) + somaDosDigitos(n / 10);
}

int main(void) {
    int numero = 12345;
    int resultado = somaDosDigitos(numero);
    printf("A soma dos dígitos de %d é %d\n", numero, resultado);
    return 0;
}
#include <stdio.h>
#include <stdlib.h>

// Função recursiva para calcular a potência de um número
int potencia(int base, int expoente) {
    if (expoente == 0)
        return 1;
    else
        return base * potencia(base, expoente - 1);
}

int main(void) {
    int base = 2;
    int expoente = 3;
    int resultado = potencia(base, expoente);
    printf("%d^%d = %d\n", base, expoente, resultado);
    return 0;
}
